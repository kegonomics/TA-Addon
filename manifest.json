{
  // Required
  "manifest_version": 2,
  "name": "TrueAchievements Additamenta",
  "version": "0.1",
  "options_page": "options.html",

  // Recommended
  "default_locale": "en",
  "description": "Adds miscellaneous features to TrueAchievements.com",

  // Optional
  "author": "kegonomics",

  // Content Scripts
  "content_scripts": [
    {
      "matches": ["http://www.trueachievements.com/*"],
      "css": ["css/style.css", "css/font-awesome.min.css"],
      "js": ["js/jquery-2.1.3.min.js", "js/mainScript.js"]
    }
  ],

  // Permissions
  "permissions": [
    "storage",
    "http://www.trueachievements.com/",
    "https://www.trueachievements.com/"
  ]
}