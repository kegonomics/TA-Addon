{
  // Required
  "manifest_version": 2,
  "name": "TrueAchievements Session Achievement Matrix",
  "version": "0.2",
  "options_page": "options.html",
  "icons": { "16": "img/icon16.png",
            "32": "img/icon32.png",
            "48": "img/icon48.png",
            "64": "img/icon64.png",
            "128": "img/icon128.png" },

  // Recommended
  "default_locale": "en",
  "description": "Adds an achievement matrix for gaming sessions to TrueAchievements.com",

  // Optional
  "author": "kegonomics",

  // Content Scripts
  "content_scripts": [
    {
      "matches": ["http://www.trueachievements.com/*"],
      "css": ["css/style.css", "css/font-awesome.min.css"],
      "js": ["js/jquery-2.1.3.min.js", "js/mainScript.js"]
    }
  ],

  // Permissions
  "permissions": [
    "storage",
    "http://www.trueachievements.com/",
    "https://www.trueachievements.com/"
  ]
}